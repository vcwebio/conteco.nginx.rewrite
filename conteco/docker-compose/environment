#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="nginx.rewrite"
export CONTECO_DC_GLOBAL_STACKNAMES="url_rewrite"
export CONTECO_DC_GLOBAL_BOOTSTACKS="url_rewrite"
export CONTECO_DC_GLOBAL_RUNSTACKS=""
export CONTECO_DC_GLOBAL_VOLUME_LIST=
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_URL_REWRITE_ENVIRONMENT,$CONTECO_DC_URL_REWRITE_COMMAND,$CONTECO_DC_URL_REWRITE_PORTS,$CONTECO_DC_URL_REWRITE_NETWORKS,$CONTECO_DC_URL_REWRITE_DEPLOY_MODE,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_URL_REWRITE_ENVIRONMENT="\
'CONTECO_NGINX_CONF_LOCATION=${DOLLAR}{CONTECO_DC_URL_REWRITE_ENVIRONMENT_CONF_PATH}', \
'CONTECO_NGINX_CONF_PROXY_PASS=${DOLLAR}{CONTECO_DC_URL_REWRITE_ENVIRONMENT_CONF_UPSTREAM}'"
export CONTECO_DC_URL_REWRITE_COMMAND=
export CONTECO_DC_URL_REWRITE_PORTS=
export CONTECO_DC_URL_REWRITE_NETWORKS="${DOLLAR}{CONTECO_NETWORKGLOBAL}_overlay, ${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay"
export CONTECO_DC_URL_REWRITE_DEPLOY_MODE="replicated"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_NETWORKGLOBAL}_overlay: { external: true }, ${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS nginx.base
export CONTECO_DC_URL_REWRITE_ENVIRONMENT_CONF_PATH="/${CONTECO_TYPE}/conteco_dc_streamsets"
export CONTECO_DC_URL_REWRITE_ENVIRONMENT_CONF_UPSTREAM="${CONTECO_TYPE}_conteco_dc_streamsets:18630"
export CONTECO_DC_URL_REWRITE_VOLUMES=
export CONTECO_DC_URL_REWRITE_DEPLOY_LABELS="traefik.enable=true,traefik.docker.network=${DOLLAR}{CONTECO_NETWORKGLOBAL}_overlay, traefik.http.services.${DOLLAR}{CONTECO_STACKPREFIX}_nginx.loadbalancer.server.port=80, traefik.http.routers.${DOLLAR}{CONTECO_STACKPREFIX}_nginx.entrypoints=conteco, traefik.http.routers.${DOLLAR}{CONTECO_STACKPREFIX}_nginx.rule=PathPrefix(\"/$(echo "${DOLLAR}{CONTECO_STACKPREFIX}" | tr _ /)/nginx\")"
export CONTECO_DC_URL_REWRITE_DEPLOY_RESOURCES_LIMITS_CPUS=
export CONTECO_DC_URL_REWRITE_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_URL_REWRITE_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export CONTECO_DC_URL_REWRITE_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="16m"
# END SETTINGS nginx.base

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_VOLUMES=""
# END TOPLEVEL SETTINGS
