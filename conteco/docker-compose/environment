#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_SERVICES='nginx.base'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_NGINX_REWRITE_ENVIRONMENT,$CONTECO_DC_NGINX_REWRITE_COMMAND,$CONTECO_DC_NGINX_REWRITE_VOLUMES,$CONTECO_DC_NGINX_REWRITE_DEPLOY_MODE,$CONTECO_DC_NGINX_REWRITE_DEPLOY_REPLICAS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_NGINX_REWRITE_ENVIRONMENT="\
'CONTECO_NGINX_CONF_LOCATION=${DOLLAR}{CONTECO_DC_NGINX_REWRITE_ENVIRONMENT_CONF_PATH}', \
'CONTECO_NGINX_CONF_PROXY_PASS=${DOLLAR}{CONTECO_DC_NGINX_REWRITE_ENVIRONMENT_CONF_UPSTREAM}'"
export CONTECO_DC_NGINX_REWRITE_COMMAND=
export CONTECO_DC_NGINX_REWRITE_VOLUMES=
export CONTECO_DC_NGINX_REWRITE_DEPLOY_MODE="replicated"
export CONTECO_DC_NGINX_REWRITE_DEPLOY_REPLICAS="1"
# END GLOBAL SETTINGS

# START SETTINGS nginx.base
export CONTECO_DC_NGINX_REWRITE_ENVIRONMENT_CONF_PATH="/conteco/grafana"
export CONTECO_DC_NGINX_REWRITE_ENVIRONMENT_CONF_UPSTREAM="grafana_base_grafana:3000"
export CONTECO_DC_NGINX_REWRITE_PORTS=
export CONTECO_DC_NGINX_REWRITE_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_NGINX_REWRITE_VOLUMES_NAME="${CONTECO_ECOSYSTEM}_nginx_volume"
export CONTECO_DC_NGINX_REWRITE_DEPLOY_LABELS="traefik.enable=true, traefik.http.services.${CONTECO_TYPE}_${CONTECO_NAME}_${CONTECO_TYPE}.loadbalancer.server.port=80, traefik.http.routers.${CONTECO_TYPE}_${CONTECO_NAME}_${CONTECO_TYPE}.entrypoints=conteco, traefik.http.routers.${CONTECO_TYPE}_${CONTECO_NAME}_${CONTECO_TYPE}.rule=PathPrefix(\"/conteco/grafana\")"
export CONTECO_DC_NGINX_REWRITE_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_NGINX_REWRITE_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_NGINX_REWRITE_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_NGINX_REWRITE_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="32m"
# END SETTINGS nginx.base

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_VOLUMES="${CONTECO_DC_NGINX_REWRITE_VOLUMES_NAME}: {}"
export CONTECO_DC_GLOBAL_NETWORKS="${CONTECO_DC_NGINX_REWRITE_NETWORKS}: { external: true }"
# END TOPLEVEL SETTINGS
