#!/usr/bin/env bash

# START CONFIGURATION
export CONTECO_DC_GLOBAL_STACKS=''nginx.rewrite''
# END CONFIGURATION

# START OTHER VARIABLES
export CONTECO_DC_NGINX_REWRITE_ENVIRONMENT_CONF_PATH="/conteco/grafana"
export CONTECO_DC_NGINX_REWRITE_ENVIRONMENT_CONF_UPSTREAM="grafana_base_grafana:3000"
# END OTHER VARIABLES

# START VOLUMES VARIABLES
export CONTECO_DC_NGINX_REWRITE_VOLUMES_NAME="${CONTECO_ECOSYSTEM}_nginx_volume"
export CONTECO_DC_GLOBAL_VOLUMES="${CONTECO_ECOSYSTEM}_nginx_volume: { }"
# END VOLUMES VARIABLES

# START PORTS VARIABLES
export CONTECO_DC_NGINX_REWRITE_PORTS="81:80"
# END PORTS VARIABLES

# START NETWORKS VARIABLES
export CONTECO_DC_NGINX_REWRITE_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_GLOBAL_NETWORKS="${CONTECO_ECOSYSTEM}_overlay: { external: true }"
# END NETWORKS VARIABLES

# START DEPLOY VARIABLES
export CONTECO_DC_NGINX_REWRITE_DEPLOY_LABELS="traefik.enable=true, traefik.http.services.${CONTECO_TYPE}_${CONTECO_NAME}_${CONTECO_TYPE}.loadbalancer.server.port=80, traefik.http.routers.${CONTECO_TYPE}_${CONTECO_NAME}_${CONTECO_TYPE}.entrypoints=conteco, traefik.http.routers.${CONTECO_TYPE}_${CONTECO_NAME}_${CONTECO_TYPE}.rule=PathPrefix(\"/conteco\")"
export CONTECO_DC_NGINX_REWRITE_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_NGINX_REWRITE_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_NGINX_REWRITE_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_NGINX_REWRITE_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="32m"
# END DEPLOY VARIABLES


